<script>
    import { gsap } from 'gsap';

    const confettiImages = ['/triangulo.svg', '/favicon.svg'];

    let lastConfettiTime = 0;
    const CONFETTI_COOLDOWN = 100;

    function createConfetti(container, mouseX, mouseY) {
        const confetti = document.createElement('img');
        confetti.src =
            confettiImages[Math.floor(Math.random() * confettiImages.length)];
        confetti.classList.add('confetti');
        confetti.style.left = `${mouseX}px`;
        confetti.style.top = `${mouseY}px`;

        const angle = Math.random() * 360;
        const speed = Math.random() * 50 + 50;
        const x = Math.cos((angle * Math.PI) / 180) * speed;
        const y = Math.sin((angle * Math.PI) / 180) * speed;

        gsap.to(confetti, {
            duration: 2,
            x: x,
            y: y,
            rotation: angle,
            scale: 0,
            opacity: 0,
            ease: 'power1.out',
        });

        container.appendChild(confetti);
        setTimeout(() => container.removeChild(confetti), 2000);
    }

    const container = document.querySelector('.confetti-container');
    const serviceItems = document.querySelectorAll('.service-item');

    serviceItems.forEach(item => {
        let isHovering = false;

        item.addEventListener('mouseenter', () => {
            isHovering = true;
        });

        item.addEventListener('mouseleave', () => {
            isHovering = false;
        });

        item.addEventListener('mousemove', e => {
            if (!isHovering) return;

            const x = e.clientX;
            const y = e.clientY + window.scrollY;
            createConfetti(container, x, y);
        });
    });
</script>
