---
import SocialLinks from './SocialLinks.astro';
---

<section class="px-4 sm:px-6 lg:px-20 lg:py-24 max-w-[100vw] mb-10">
    <div class="max-w-full mx-auto">
        <h2 class="sr-only">Hablemos para dar forma a tu proyecto juntos</h2>

        <div class="space-y-4 sm:space-y-6 md:space-y-8">
            <div
                class="flex flex-col md:flex-row items-start md:items-center gap-4 sm:gap-8 md:gap-12"
            >
                <span
                    class="font-title text-5xl sm:text-6xl md:text-8xl lg:text-6xl xl:text-[13rem] lg:leading-[0.8] text-primary-purple uppercase"
                >
                    Hablemos para dar
                </span>
            </div>

            <div
                class="flex flex-col md:flex-row items-start gap-4 sm:gap-8 md:gap-12"
            >
                <span
                    class="font-title text-5xl sm:text-6xl md:text-8xl lg:text-6xl xl:text-[13rem] lg:leading-[0.8] text-primary-pink uppercase"
                >
                    Forma a tu
                </span>
                <a
                    href="/contacto"
                    class="w-full md:w-fit flex justify-center uppercase text-center py-4 px-8 md:p-12 text-2xl md:text-4xl lg:text-5xl font-medium text-primary-purple border border-primary-purple rounded-full bg-primary-pink hover:bg-transparent hover:border-primary-purple transition-colors"
                >
                    Hablemos
                </a>
            </div>

            <div
                class="flex flex-col md:flex-row items-start md:items-center gap-4 sm:gap-8 md:gap-12"
            >
                <span
                    class="font-title text-5xl sm:text-6xl md:text-8xl lg:text-6xl xl:text-[13rem] lg:leading-[0.8] text-primary-purple uppercase"
                >
                    Proyecto juntos
                </span>
            </div>
        </div>
    </div>
</section>
<section
    class="border-t px-4 sm:px-6 py-8 md:py-16 max-w-[1600px] mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-11"
>
    <div class="flex justify-center lg:justify-start">
        <a href="/">
            <img
                class="h-[100px] sm:h-[100px] md:h-[150px] lg:h-[200px]"
                src="/diseno-web-federico-sanchez.svg"
                alt="Logotipo Federico Sanchez - Desarrollo Web"
            />
        </a>
    </div>
    <div class="flex flex-col items-center lg:items-start">
        <h4 class="text-3xl md:text-4xl lg:text-5xl text-primary-purple mb-4">
            Información
        </h4>
        <ul class="text-2xl sm:text-xl md:text-2xl flex flex-col gap-2">
            <li>
                <a class="text-light-purple hover:text-primary-pink" href="/"
                    >Inicio</a
                >
            </li>
            <li>
                <a
                    class="text-light-purple hover:text-primary-pink"
                    href="/servicios">Servicios</a
                >
            </li>
            <li>
                <a
                    class="text-light-purple hover:text-primary-pink"
                    href="/sobre-mi">Sobre mí</a
                >
            </li>
            <li>
                <a
                    class="text-light-purple hover:text-primary-pink"
                    href="/proyectos">Proyectos</a
                >
            </li>
            <li>
                <a
                    class="text-light-purple hover:text-primary-pink"
                    href="/contacto">Contacto</a
                >
            </li>
        </ul>
    </div>
    <div class="flex flex-col items-center lg:items-start">
        <h4 class="text-3xl md:text-4xl lg:text-5xl text-primary-purple mb-4">
            Sígueme
        </h4>
        <SocialLinks />
    </div>
</section>
